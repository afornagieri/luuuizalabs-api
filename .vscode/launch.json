{
  // https://jestjs.io/docs/troubleshooting - Debugging in VS Code
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest: current file",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["-i"],
      "internalConsoleOptions": "openOnSessionStart",
      "envFile": "${workspaceFolder}/.env",
    }
  ]
}
